# REROUTE Configuration for {{ project_name }}
# Generated by REROUTE CLI

# Application Settings
REROUTE_DEBUG=True
REROUTE_HOST=0.0.0.0
REROUTE_PORT=7376

{% if db_type %}
# Database Configuration
REROUTE_DATABASE_TYPE={{ db_type }}
REROUTE_DATABASE_URL={{ db_url }}

# TODO: Update the database URL with your actual credentials
# Format examples:
{% if db_type == 'postgresql' %}
#   postgresql://username:password@localhost:5432/database_name
{% elif db_type == 'mysql' %}
#   mysql+pymysql://username:password@localhost:3306/database_name
{% elif db_type == 'mongodb' %}
#   mongodb://username:password@localhost:27017/database_name
{% elif db_type == 'sqlite' %}
#   sqlite:///./{{ project_name }}.db
{% endif %}

{% endif %}
# Security (Change in production!)
REROUTE_SECRET_KEY=your-secret-key-change-in-production

# CORS Settings
REROUTE_ENABLE_CORS=True
REROUTE_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
