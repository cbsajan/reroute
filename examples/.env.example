# REROUTE Environment Configuration Example
# Copy this file to .env (for default), .env.dev, or .env.prod
# All variables must be prefixed with REROUTE_*

# Server Configuration
REROUTE_HOST=0.0.0.0
REROUTE_PORT=7376

# Framework Behavior
REROUTE_DEBUG=True
REROUTE_VERBOSE_LOGGING=True
REROUTE_LOG_LEVEL=DEBUG
REROUTE_AUTO_RELOAD=True

# CORS Configuration
REROUTE_ENABLE_CORS=True
REROUTE_CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173
REROUTE_CORS_ALLOW_CREDENTIALS=False

# API Configuration
REROUTE_API_BASE_PATH=/api/v1

# Note: The following are FINAL attributes and CANNOT be changed via environment:
# - ROUTES_DIR_NAME (always "routes")
# - ROUTE_FILE_NAME (always "page.py")
# - SUPPORTED_HTTP_METHODS
# - ALLOWED_ROUTE_EXTENSIONS
# - IGNORE_FOLDERS
# - IGNORE_FILES
